<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/list_add_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/no_image_available"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_add_title"
            android:layout_width="303dp"
            android:layout_height="25dp"
            android:textSize="14sp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/list_add_author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:maxLines="1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/list_add_isbn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/list_add_author"
                android:layout_alignBottom="@+id/list_add_author"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:maxLines="1"
                android:textSize="12sp" />

        </RelativeLayout>



    </LinearLayout>

    </LinearLayout>