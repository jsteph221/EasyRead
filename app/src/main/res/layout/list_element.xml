<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    android:longClickable="true"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    >

    <elapse.easyread.CustomNetworkImageView
        android:id="@+id/list_book_image"
        android:layout_width="50dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/no_image_available"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


    </LinearLayout>

    <ImageButton
        android:id="@+id/list_go"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/list_book_title"
        android:layout_gravity="center|end"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/list_book_title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/list_book_image"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_book_author"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:maxLines="1"
        android:layout_below="@+id/list_book_title"
        android:layout_toLeftOf="@+id/list_go"
        android:layout_toEndOf="@+id/list_book_image"
         />

    <TextView
        android:id="@+id/list_poster_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_book_author"
        android:layout_toEndOf="@+id/list_book_image"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_exchange_date"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:ems="10"
        android:layout_below="@+id/list_go"
        android:layout_alignParentEnd="true" />


</RelativeLayout>